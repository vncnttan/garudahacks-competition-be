{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2017",
            "esnext.asynciterable",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "noEmit": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@sockets/*": [
                "src/sockets/*"
            ],
            "@config": [
                "src/config"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@databases": [
                "src/databases"
            ],
            "@dtos/*": [
                "src/dtos/*"
            ],
            "@exceptions/*": [
                "src/exceptions/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@/generated/prisma": [
                "node_modules/.prisma/client"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/http",
        "src/logs",
        "src/tests"
    ]
}